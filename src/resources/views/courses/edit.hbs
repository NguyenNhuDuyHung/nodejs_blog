<div class="container mt-4">
  <h3>Sửa khóa học</h3>
  <form class="row g-3" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="col-md-12">
      <label for="name" class="form-label">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{course.name}}"
      />
    </div>
    <div class="col-md-12">
      <label for="videoId" class="form-label">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        value="{{course.videoId}}"
      />
    </div>
    <div class="col-md-12">
      <label for="description" class="form-label">Mô tả</label>
      <textarea
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}</textarea>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Lưu lại</button>
    </div>
  </form>
</div>